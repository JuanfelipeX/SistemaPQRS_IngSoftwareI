<!DOCTYPE html>

<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <title>Document</title>
</head>

<body>




    <!-- Tabla para mostrar los datos de la coleccion users -->
    <table id="tablaPQRS" class="table mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre Completo</th>
                <th>Correo Electrónico</th>
                <th>Teléfono Movil</th>
                <th>Tipo de Identificación</th>
                <th>Numero de Identificación</th>
                <th>Tipo de Radicado</th>
                <th>Comentarios</th>
                <th>Anexo</th>
                <th>acciones</th>
            </tr>
        </thead>

        <tbody>
            <% datos.forEach((atributo) => { %>
                <tr>
                    <td>
                        <%= atributo._id%>
                    </td>

                    <td>
                        <%= atributo.nombre%>
                    </td>

                    <td>
                        <%= atributo.correo%>
                    </td>

                    <td>
                        <%= atributo.telefono%>
                    </td>

                    <td>
                        <%= atributo.tipoId%>
                    </td>

                    <td>
                        <%= atributo.numeroId%>
                    </td>

                    <td>
                        <%= atributo.tipoRadicado%>
                    </td>

                    <td>
                        <%= atributo.comentarios%>
                    </td>

                    <td>
                        <%= atributo.anexo%>
                    </td>

                    <td>
                        <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                        <a href="/borrar/<%= atributo._id%>" class="btn btn-outline-danger bi bi-trash"></a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>





    <!-- Modal para Editar-->
    <div id="modalPQRS" class="modal fade" tabindex="-1" aria-labelledby="modalPQRS" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-black">
                    <h5 class="modal-title" id="exampleModalLabel">Editar Información</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form action="/editar" method="POST">
                        <input type="text" name="id_editar" id="id_editar" hidden>

                        <div class="mb-3">
                            <label for="nombre_editar" class="form-label">Nombre Completo</label>
                            <input type="text" class="form-control" id="nombre_editar" name="nombre_editar" aria-describedby="nombreHelp" placeholder="Nombre Completo" required value="">
                        </div>

                        <div class="mb-3">
                            <label for="email_editar" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control form-mail" id="email_editar" name="email_editar" aria-describedby="emailHelp" placeholder="Correo Electrónico" required value="">
                        </div>

                        <div class="mb-3">
                            <label for="telefono_editar" class="form-label">Teléfono Movil</label>
                            <input type="tel" class="form-control" id="telefono_editar" name="telefono_editar" aria-describedby="telefonoHelp" placeholder="Teléfono Movil" required value="">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipo de Identificación</label>
                            <select name="tipoId_editar" id="tipoId_editar" class="form-select form-control" aria-describedby="tipoIdHelp" required>
                                    <option value="Cedula Ciudadanía">Cedula Ciudadanía</option>
                                    <option value="Cedula Extranjera">Cedula Extranjera</option>
                                    <option value="Numero de Identificación Personal">Numero de Identificación Personal</option>
                                    <option value="Numero de Identificación Tributaria">Numero de Identificación Tributaria</option>
                                    <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                                    <option value="Pasaporte">Pasaporte</option>
                                </select>
                        </div>

                        <div class="mb-3">
                            <label for="numeroId_editar" class="form-label">Numero de Identificación</label>
                            <input type="number" class="form-control numeroId" id="numeroId_editar" name="numeroId_editar" aria-describedby="emailHelp" placeholder="Numero de Identificación" required value="">
                        </div>

                        <div class="mb-3">
                            <label class="form-label tipoRadicado">Tipo de Radicado</label>
                            <select name="tipoRadicado_editar" id="tipoRadicado_editar" class="form-select form-control tipoRadicado" aria-describedby="tipoRadicadoHelp" placeholder="Tipo de Radicado" required>
                                <option value="Peticiones">Peticiones</option>
                                <option value="Quejas">Quejas</option>
                                <option value="Reclamos">Reclamos</option>
                                <option value="Sugerencias">Sugerencias</option>
                            </select>
                        </div>

                        <div class="form-outline w-100">
                            <label class="form-label" for="comentarios_editar">Comentarios</label>
                            <textarea class="form-control" id="comentarios_editar" name="comentarios_editar" rows="4" style="background: rgb(36, 36, 36);" aria-describedby="comentariosHelp"></textarea>
                        </div>

                        <!--  NO SE PUEDE AGREGAR EL TYPE FILE SALE ERROR NO CARGA PARA EDITAR
                        <div class="mb-3">
                            <label for="anexo_editar" class="form-label">Anexo (PDF)</label>
                            <input class="form-control" type="file" id="anexo_editar">
                        </div>
                        -->


                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>








    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- Own CSS 
    <link rel="stylesheet" href="../css/pqrs-mobile.css">
    <link rel="stylesheet" media="screen and (min-width: 600px)" href="../css/pqrs.css" />
    -->
    <!-- Own JS -->
    <script src="../../controllers/tableController.js"></script>
    <script src="../js/pqrs.js"></script>

</body>

</html>